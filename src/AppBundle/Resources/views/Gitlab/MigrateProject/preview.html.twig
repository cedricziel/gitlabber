{% extends '@App/base.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
    <h1>Migration preview</h1>

    <ul>
        <li>Source Project Name: {{ project.nameWithNamespace }}</li>
    </ul>

    {{ form_start(form) }}

    {{ form_row(form.targetHost) }}

    {% if form.targetGroup is defined %}
        {{ form_row(form.targetGroup) }}
    {% endif %}

    {% if form.targetName is defined %}
        {{ form_row(form.targetName) }}
    {% endif %}

    {% if form.yes is defined %}
        {{ form_row(form.yes) }}
    {% else %}
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" class="btn btn-primary btn-block">
            </div>
        </div>
    {% endif %}
    {{ form_end(form) }}

{% endblock %}
