{% extends '@App/base.html.twig' %}

{% block body %}
    <h1>Groups list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Path</th>
                <th>Description</th>
                <th>Visibilitylevel</th>
                <th>Avatarurl</th>
                <th>Weburl</th>
                <th>Remoteid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td><a href="{{ path('gitlab_group_show', { 'id': group.id }) }}">{{ group.id }}</a></td>
                <td>{{ group.name }}</td>
                <td>{{ group.path }}</td>
                <td>{{ group.description }}</td>
                <td>{{ group.visibilityLevel }}</td>
                <td>{{ group.avatarUrl }}</td>
                <td>{{ group.webUrl }}</td>
                <td>{{ group.remoteId }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('gitlab_group_show', { 'id': group.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('gitlab_group_edit', { 'id': group.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('gitlab_group_new') }}">Create a new group</a>
        </li>
    </ul>
{% endblock %}
